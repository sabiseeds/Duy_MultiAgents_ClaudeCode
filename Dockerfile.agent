FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY shared/ ./shared/
COPY agent/ ./agent/

# Create shared_files directory
RUN mkdir -p /app/shared_files

# Expose port (will be set via environment variable)
EXPOSE 8001-8005

# Run agent service (port set via AGENT_PORT env var)
CMD uvicorn agent.agent_service:app --host 0.0.0.0 --port ${AGENT_PORT}
